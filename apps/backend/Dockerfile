# Run the container with `docker run -p 3000:3000 -t amara-backend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system amara-backend && \
          adduser --system -G amara-backend amara-backend

COPY apps/backend/dist amara-backend/
COPY apps/backend/package.json amara-backend/
RUN chown -R amara-backend:amara-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix amara-backend --omit=dev -f install

CMD [ "node", "amara-backend" ]
